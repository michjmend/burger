{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">
  <div class="jumbotron text-center">
    <h1 class="display-4">EAT-DA-BURGER</h1>
    <h5 class="lead">Order a burger of your choice!</h5>
    <hr class="my-4">
  </div>
</div>
{{!-- container to push info into --}}
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h3><u>READY TO DEVOUR</u> <i class="fas fa-hamburger"></i></h3>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <h6>{{burger_name}}</h6>
          <button class="devourBtn" data-id="{{id}}">Devour it!</button>
          <button class="deleteBtn" data-id="{{id}}">Delete burger</button>
        {{/unless}}
      {{/each}}
    </ul>

    </div>
    <div class="col">
     <img src="https://media.giphy.com/media/JteZf56ZXsJl6/giphy.gif" height="250px" width="auto" alt="burger"/>
    </div>
    <div class="col">
      <h3><u>DEVOURED</u> <i class="far fa-smile-beam"></i></h3>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <h6>{{burger_name}}</h6>
            <button class="unDevourBtn" data-id="{{id}}">Undevour</button>
            <button class="deleteBtn" data-id="{{id}}">Delete burger</button>
        {{/if}}
      {{/each}}
    </ul>

    </div>
  </div>
</div>
{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
<div class="container">
  <div class="input-group mb-3 text-center">
    <input type="text" class="form-control" placeholder="What kinda burger you feelin'?" aria-label="burger-name" aria-describedby="button-addon2">
    <div class="input-group-append">
      <button class="btn btn-warning" type="submit" id="button-addon2">BURGER IT UP</button>
    </div>
  </div>
</div>
